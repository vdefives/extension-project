{
  "name" :"Xtension chrome",
  "version" :"1.0",
  "manifest_version" :2,

  "description" :"Le truc QUE JE CHOISIS",

  "options_page" :"page_option.html",

  "background":{
    "scripts" : ["background.js"],
    "persistent" : true
  },

  "browser_action" :
  {
    "default_title" : "L'extension maison, c'est elle !",
    "default_icon" : "img/icon.png",
    "default_popup" :"dire_bonjour.html"
  },

  "permissions" : [
    "tabs",
    "<all_urls>"
  ],

  "content_scripts" : [
    {
      "matches": [
        "http://www.jeuxvideo.com/*",
        "https://www.jeuxvideo.com/*"
      ],
      "js": [
        "jvc.js"
      ]
    }
    ]
}
